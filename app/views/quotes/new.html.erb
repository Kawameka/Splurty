<!--this creates a simple form with boxes for the quote
and the author, as well as a submit button-->

<h1>Enter Your Quote Details</h1>
<%= simple_form_for @quote do |f| %>
    <%= f.input :saying %>
    <%= f.input :author %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-danger' %>
<% end %>